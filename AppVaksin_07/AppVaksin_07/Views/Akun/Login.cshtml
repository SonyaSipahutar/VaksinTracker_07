@model AppVaksin_07.Models.Akun

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/_LayoutPageLogin.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<section class="w3l-workinghny-form">
    <!-- /form -->
    <div class="workinghny-form-grid">
        <div class="wrapper">
            <div class="logo">
                <h1><a class="brand-logo" href="index.html">Vaksin Tracking</a></h1>
                <!-- if logo is image enable this
                    <a class="brand-logo" href="#index.html">
                        <img src="image-path" alt="Your logo" title="Your logo" style="height:35px;" />
                    </a> -->
            </div>
            <div class="workinghny-block-grid">
                <div class="form-right-inf">
                    <h2>Login </h2>

                    <div class="login-form-content">

                        <form action="Login" class="signin-form" method="post">
                            <div class="one-frm">
                                @Html.EditorFor(model => model.username, new { htmlAttributes = new { @name = "Username", @placeholder = "Username", @required = "", @autofokus = "autofocus" } })
                               
                            </div>
                            <div class="one-frm">
                                @Html.EditorFor(model => model.password, new { htmlAttributes = new { @name = "Password", @placeholder = "Password", @required = "" } })
                               
                            </div>
                            <label class="check-remaind">
                                <input type="checkbox">
                                <span class="checkmark"></span>
                                <p class="remember">Remember Me</p>

                            </label>
                            <button class="btn btn-style mt-3">Login </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- //form -->
    <!-- copyright-->
    <div class="copyright text-center">
        <div class="wrapper">
            <p class="copy-footer-29">
                © 2020 Vaksin Tracking. All rights reserved | Kelompok 07 TEKNET
            </p>
        </div>
    </div>
    <!-- //copyright-->
</section>

}